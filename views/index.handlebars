<h1>{{> page/title}}</h1>

{{> page/nav}}
  <div class="container">
    <div id="login">
      <h1>O Auth Button</h1>
      <a href="/login" class="btn btn-primary">Log in with Spotify</a>
    </div>
    <div id="loggedin">
      <div id="user-profile">
      </div>
      <div id="user-playlists">
      </div>
      <div id="oauth">
      </div>
      <button class="btn btn-default" id="obtain-new-token">Obtain new token using the refresh token</button>
    </div>
  </div>
 <span id='user-profile-template'>
    <h1>Logged in as </h1><pre>{{> response}}</pre>
    <div class="media">
      <div class="pull-left">
        <img class="media-object" width="150" src="{{images.0.url}}" />
      </div>
      <div class="media-body">
        <dl class="dl-horizontal">
        </dl>
      </div>
      <iframe width=1000 height=800 src="{{external_urls.spotify}}"></iframe>
    </div>
	</span>
 <span id='user-playlist-container'>

    <div class="media">
      <div class="pull-left">
        <img class="media-object" width="{{image.0.width}}" height="{{image.0.height}}" src="{{image.0.url}}" />
      </div>
      <div class="media-body">
        <dl class="dl-horizontal">
        <dt>playlist name</dt><dd class="clearfix">{{name}}</dd>
          <dt>Playlist IdId</dt><dd>{{id}}</dd>
          <dt>Email</dt><dd>{{email}}</dd>
          <dt>Link</dt><dd><a href="{{href}}">{{href}}</a></dd>
          <dt>Profile Image</dt><dd class="clearfix"><a href="{{images.0.url}}">{{images.0.url}}</a></dd>
          <dt>Country</dt><dd>{{country}}</dd>
        </dl>
      </div>
    </div>

	</span>

